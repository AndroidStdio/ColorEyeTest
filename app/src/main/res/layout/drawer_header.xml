<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_header"
    android:layout_width="match_parent"
    android:layout_height="190dp"
    android:clickable="true"

    android:fitsSystemWindows="true"
    android:background="#242B31">


    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/header_profile_image"
        android:layout_width="76dp"
        android:layout_height="76dp"
        android:src="@mipmap/ic_user"
        app:civ_border_width="2dp"
        app:civ_border_color="#FFFFFF"
        android:layout_marginLeft="24dp"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/tv_header_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="14sp"
        android:textColor="#FFF"
        android:textStyle="bold"
        android:gravity="left"
        android:paddingBottom="4dp"
        android:layout_marginTop="2dp"

        android:layout_above="@+id/tv_header_email"
        android:layout_alignLeft="@+id/header_profile_image"
        android:layout_alignStart="@+id/header_profile_image" />

    <TextView
        android:id="@+id/tv_header_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="unknown.soldier@awesomeness.com"
        android:gravity="left"
        android:layout_marginBottom="8dp"
        android:textSize="14sp"
        android:textColor="#fff"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/tv_header_name"
        android:layout_alignStart="@+id/tv_header_name" />

</RelativeLayout>